{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "baseUrl": "./",   
    "lib": ["ES2022"],
    "declarationMap": true,   
    "composite": true,
    "importsNotUsedAsValues": "remove",   
    "isolatedModules": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true,
    "compiler": "typescript",
    "experimentalSpecifierResolution": "node" ,
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  }
}
