{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "compiler": "typescript",
    "experimentalSpecifierResolution": "node" ,
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  },
  "exclude": ["node_modules", "./*.ts", "__test__"]
}